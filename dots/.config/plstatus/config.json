{
    "max-status-length": 2048,
    "status-period": 750,
    "components": [
        {
            "command": "ram-status",
            "period": 1000,
            "separator": "|"
        },
        {
            "command": "disk-status",
            "period": 1000,
            "separator": "|"
        },
        {
            "command": "cpu-status",
            "period": 1000,
            "separator": "|"
        },
        {
            "command": "battery-status",
            "args": [
                "-n",
                ""
            ],
            "period": 1000,
            "separator": "|"
        },
        {
            "command": "eth-status",
            "period": 1000,
            "args": [
                "-d",
                ""
            ],
            "separator": "|"
        },
        {
            "command": "wifi-status",
            "period": 1000,
            "args": [
                "-u",
                "WIFI %p% %s",
                "-d",
                ""
            ],
            "separator": "|"
        },
        {
            "command": "mullvad-status",
            "period": 30000,
            "separator": "|"
        },
        {
            "command": "date",
            "args": "+%Y-%m-%d - %H:%M:%S",
            "period": 500
        }
    ]
}
