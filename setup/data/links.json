{
    "bashrc": {
        "source": "$(setupDir)/.bashrc",
        "target": "~/.bashrc",
        "flags": []
    },
    "bashProfile": {
        "source": "$(setupDir)/.bash_profile",
        "target": "~/.bash_profile",
        "flags": []
    },
    "dunst": {
        "source": "$(setupDir)/.config/dunst/dunstrc",
        "target": "~/.config/dunst/dunstrc",
        "flags": ["substitute"]
    },
    "alacritty": {
        "source": "$(setupDir)/.config/alacritty/alacritty.yml",
        "target": "~/.config/alacritty/alacritty.yml",
        "flags": []
    },
    "btop": {
        "source": "$(setupDir)/.config/btop/btop.conf",
        "target": "~/.config/btop/btop.conf",
        "flags": []
    },
    "rofi": {
        "source": "$(setupDir)/.config/rofi/config.rasi",
        "target": "~/.config/rofi/config.rasi",
        "flags": ["substitute"]
    },
    "ranger": {
        "source": "$(setupDir)/.config/ranger/rc.conf",
        "target": "~/.config/ranger/rc.conf",
        "flags": []
    },
    "dwm": {
        "source": "$(setupDir)/.config/dwm/config.h",
        "target": "~/.config/dwm/config.h",
        "flags": ["substitute"]
    },
    "plstatus": {
        "source": "$(setupDir)/.config/plstatus/config.json",
        "target": "~/.config/plstatus/config.json",
        "flags": ["copy"]
    },
    "enhancer-for-youtube": {
        "source": "$(setupDir)/.config/enhancer-for-youtube/efy.json",
        "target": "~/.config/enhancer-for-youtube/efy.json",
        "flags": ["substitute"]
    },
    "reflector": {
        "source": "$(setupDir)/etc/xdg/reflector/reflector.conf",
        "target": "/etc/xdg/reflector/reflector.conf",
        "flags": ["sudo", "copy"]
    }
}
