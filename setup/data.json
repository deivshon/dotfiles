{
    "packages": {
        "pacman": [
            "xorg",
            "xorg-xinit",
            "rofi",
            "dunst",
            "alacritty",
            "feh",
            "curl",
            "sudo",
            "exa",
            "adobe-source-code-pro-fonts",
            "acpi",
            "iw",
            "sysstat",
            "ranger",
            "ueberzug",
            "ttf-droid",
            "bc",
            "polkit",
            "network-manager-applet",
            "noto-fonts",
            "wget",
            "python-requests",
            "gnome-keyring",
            "firefox",
            "gnome-themes-extra",
            "nemo",
            "lxappearance",
            "wireshark-qt",
            "tmux",
            "btop"
        ],
        "yay": [
            "afetch",
            "cbonsai",
            "ttf-ms-fonts",
            "polkit-dumb-agent",
            "visual-studio-code-bin",
            "gksu"
        ]
    },
    "neededFields": {
        "substitutions": [
            "mainColor",
            "secondaryColor"
        ],
        "other": [
            "wallpaperLink",
            "wallpaperName"
        ]
    },    
    "links": {
        "bash": {
            "source": "$(setupDir)/../.bashrc",
            "target": "~/.bashrc",
            "setupFlags": []
        },
        "dunst": {
            "source": "$(setupDir)/../.config/dunst/dunstrc",
            "target": "~/.config/dunst/dunstrc",
            "setupFlags": ["needsSudo", "needsSubstitution"]
        },
        "alacritty": {
            "source": "$(setupDir)/../.config/alacritty/alacritty.yml",
            "target": "~/.config/alacritty/alacritty.yml",
            "setupFlags": []
        },
        "btop": {
            "source": "$(setupDir)/../.config/btop/btop.conf",
            "target": "~/.config/btop/btop.conf",
            "setupFlags": []
        },
        "rofi": {
            "source": "$(setupDir)/../.config/rofi/config.rasi",
            "target": "~/.config/rofi/config.rasi",
            "setupFlags": ["needsSubstitution"]
        },
        "ranger": {
            "source": "$(setupDir)/../.config/ranger/rc.conf",
            "target": "~/.config/ranger/rc.conf",
            "setupFlags": []
        },
        "dwm": {
            "source": "$(setupDir)/../.config/dwm/config.h",
            "target": "~/.config/dwm/config.h",
            "setupFlags": ["needsSubstitution"]
        }
    }    
}
