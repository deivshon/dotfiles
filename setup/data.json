{
    "packages": {
        "pacman": [
            "xorg",
            "xorg-xinit",
            "rofi",
            "dunst",
            "alacritty",
            "feh",
            "curl",
            "sudo",
            "exa",
            "adobe-source-code-pro-fonts",
            "acpi",
            "iw",
            "sysstat",
            "ranger",
            "ueberzug",
            "ttf-droid",
            "bc",
            "polkit",
            "network-manager-applet",
            "noto-fonts",
            "wget",
            "python-requests",
            "gnome-keyring",
            "firefox",
            "gnome-themes-extra",
            "nemo",
            "lxappearance",
            "wireshark-qt",
            "tmux",
            "btop",
            "xclip",
            "python-matplotlib"
        ],
        "yay": [
            "afetch",
            "cbonsai",
            "polkit-dumb-agent-git",
            "visual-studio-code-bin",
            "gksu"
        ]
    },
    "neededFields": {
        "substitutions": [
            "mainColor",
            "secondaryColor"
        ],
        "setup-expanded-substitutions": [
            "efy--main-color",
            "efy--main-background",
            "efy--second-background",
            "efy--hover-background",
            "efy--main-text",
            "efy--dimmer-text",
            "efy--shadow"
        ],
        "other": [
            "wallpaperLink",
            "wallpaperName"
        ]
    },
    "links": {
        "bashrc": {
            "source": "$(setupDir)/../.bashrc",
            "target": "~/.bashrc",
            "setupFlags": []
        },
        "bashProfile": {
            "source": "$(setupDir)/../.bash_profile",
            "target": "~/.bash_profile",
            "setupFlags": []
        },
        "dunst": {
            "source": "$(setupDir)/../.config/dunst/dunstrc",
            "target": "~/.config/dunst/dunstrc",
            "setupFlags": ["needsSubstitution"]
        },
        "alacritty": {
            "source": "$(setupDir)/../.config/alacritty/alacritty.yml",
            "target": "~/.config/alacritty/alacritty.yml",
            "setupFlags": []
        },
        "btop": {
            "source": "$(setupDir)/../.config/btop/btop.conf",
            "target": "~/.config/btop/btop.conf",
            "setupFlags": []
        },
        "rofi": {
            "source": "$(setupDir)/../.config/rofi/config.rasi",
            "target": "~/.config/rofi/config.rasi",
            "setupFlags": ["needsSubstitution"]
        },
        "ranger": {
            "source": "$(setupDir)/../.config/ranger/rc.conf",
            "target": "~/.config/ranger/rc.conf",
            "setupFlags": []
        },
        "dwm": {
            "source": "$(setupDir)/../.config/dwm/config.h",
            "target": "~/.config/dwm/config.h",
            "setupFlags": ["needsSubstitution"]
        },
        "plstatus": {
            "source": "$(setupDir)/../.config/plstatus/config.json",
            "target": "~/.config/plstatus/config.json",
            "setupFlags": ["copy"]
        },
        "enhancer-for-youtube": {
            "source": "$(setupDir)/../.config/enhancer-for-youtube/efy.json",
            "target": "~/.config/enhancer-for-youtube/efy.json",
            "setupFlags": ["needsSubstitution"]
        }
    },
    "expansion-data": {
        "enhancer-for-youtube": {
            "efy--main-color": "#A52C2C",
            "efy--main-background": "#130202",
            "efy--second-background": "#220C0C",
            "efy--hover-background": "#1A0505",
            "efy--main-text": "#FFFFFF",
            "efy--dimmer-text": "#FFFFFF",
            "efy--shadow": "#1A0505"
        }
    }
}
